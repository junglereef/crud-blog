<form
  action="/admin/post/"
  method="POST"
  class="space-y-8 divide-y divide-gray-200 p-28 rounded-3xl min-w-full"
  enctype="multipart/form-data"
>
  <div class="grid grid-cols-3 items-center justify-items-center">
    <div class="grid grid-cols-1 items-center justify-items-center">
      <label
        for="location"
        class="block w-full text-sm font-medium text-gray-700"
      >
        Imagem destacada
      </label>
      <input
        type="file"
        name="featured_img"
        id="featured_img"
        class="
          bg-purple-200shadow-sm
          focus:ring-indigo-500 focus:border-indigo-500
          block
          w-full
          border-gray-300
          rounded-2xl
          outline-none
          p-2
        "
      />
    </div>

    <div class="grid grid-cols-1 gap-4">
      <label
        for="location"
        class="block w-full text-sm font-medium text-gray-700"
      >
        Categoria
      </label>
      <select
        id="category_id"
        name="category_id"
        class="
          bg-purple-200
          mt-1
          block
          w-full
          pl-3
          pr-10
          py-2
          text-base
          border-gray-300
          focus:outline-none focus:ring-indigo-500 focus:border-indigo-500
          sm:text-sm
          rounded-md
        "
      >
        <option selected disabled>Selecione uma Categoria</option>
        <% categories.forEach(category=>{%>
        <option value="<%=category.id%>"><%=category.name%></option>
        <%})%>
      </select>
    </div>
    <div class="grid grid-cols-1 gap-4">
      <label
        for="user_id"
        class="w-full block text-sm font-medium text-gray-700"
      >
        Usuário
      </label>
      <select
        id="user_id"
        name="user_id"
        class="
          bg-purple-200
          mt-1
          block
          w-full
          pl-3
          pr-10
          py-2
          text-base
          border-gray-300
          focus:outline-none focus:ring-indigo-500 focus:border-indigo-500
          sm:text-sm
          rounded-md
        "
      >
        <option selected disabled>Selecione o Usuário</option>
        <%users.forEach(user=>{%>
        <option value="<%=user.id%>"><%=user.username%></option>
        <%})%>
      </select>
    </div>
  </div>

  <div>
    <label for="title" class="sr-only">Titulo</label>
    <input
      type="text"
      name="title"
      id="title"
      class="
        bg-purple-200
        shadow-sm
        focus:ring-indigo-500 focus:border-indigo-500
        block
        w-full
        text-2xl
        font-bold
        border-gray-300
        rounded-2xl
        outline-none
        p-2
      "
      placeholder="Titulo"
    />
  </div>
  <div>
    <label for="content" class="sr-only">Conteúdo</label>
    <textarea
      rows="20"
      name="content"
      id="content"
      class="
        bg-purple-200
        shadow-sm
        focus:ring-indigo-500 focus:border-indigo-500
        block
        w-full
        text-sm
        border-gray-300
        rounded-2xl
        outline-none
        p-10
      "
      placeholder="Conteúdo"
    >
    </textarea>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <a
        href="/admin/post"
        class="
          bg-purple-200
          py-2
          px-4
          border border-gray-300
          rounded-md
          shadow-sm
          text-sm
          font-medium
          text-gray-700
          hover:bg-gray-50
          focus:outline-none
          focus:ring-2
          focus:ring-offset-2
          focus:ring-indigo-500
        "
      >
        Cancelar
      </a>
      <button
        type="submit"
        class="
          ml-3
          inline-flex
          justify-center
          py-2
          px-4
          border border-transparent
          shadow-sm
          text-sm
          font-medium
          rounded-md
          text-white
          bg-indigo-600
          hover:bg-indigo-700
          focus:outline-none
          focus:ring-2
          focus:ring-offset-2
          focus:ring-indigo-500
        "
      >
        Salvar
      </button>
    </div>
  </div>
</form>
