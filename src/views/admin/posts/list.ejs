<main class="flex flex-col gap-6">
  <div class="flex self-end">
    <a
      href="/admin/post/adicionar"
      class="
        bg-purple-900
        py-2
        px-4
        border border-gray-300
        rounded-md
        shadow-sm
        text-sm
        font-medium
        text-purple-200
        hover:bg-purple-50 hover:text-purple-900
        focus:outline-none
        focus:ring-2
        focus:ring-offset-2
        focus:ring-indigo-500
      "
    >
      Adicionar Post
    </a>
  </div>
  <div class="flex flex-col bg-purple-200 rounded-3xl">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div
          class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg"
        >
          <table class="min-w-full divide-y divide-purple-200">
            <thead class="bg-purple-200">
              <tr>
                <th
                  class="
                    px-6
                    py-3
                    text-left text-xs
                    font-medium
                    text-gray-500
                    uppercase
                    tracking-wider
                  "
                >
                  FOTO
                </th>

                <th
                  scope="col"
                  class="
                    px-6
                    py-3
                    text-left text-xs
                    font-medium
                    text-gray-500
                    uppercase
                    tracking-wider
                  "
                >
                  T√çTULO
                </th>
                <th
                  scope="col"
                  class="
                    px-6
                    py-3
                    text-left text-xs
                    font-medium
                    text-gray-500
                    uppercase
                    tracking-wider
                  "
                >
                  CATEGORIA
                </th>
                <th
                  scope="col"
                  class="
                    px-6
                    py-3
                    text-left text-xs
                    font-medium
                    text-gray-500
                    uppercase
                    tracking-wider
                  "
                >
                  AUTOR
                </th>

                <th scope="col" class="relative px-6 py-3">
                  <span class="sr-only">Editar</span>
                </th>
                <th scope="col" class="relative px-6 py-3">
                  <span class="sr-only">Excluir</span>
                </th>
              </tr>
            </thead>
            <tbody>
              <% posts.forEach(post =>{%>

              <tr class="bg-white">
                <td class="p-6 flex items-center justify-items-center">
                  <a href="/admin/post/<%= post.id %>"
                    ><img
                      class="self-center rounded h-12 w-12"
                      src="/uploads/<%=post.featured_img%>"
                      alt=""
                  /></a>
                </td>

                <td
                  class="
                    px-6
                    py-4
                    whitespace-nowrap
                    text-sm
                    font-medium
                    text-gray-900
                  "
                >
                  <a href="/admin/post/<%= post.id %>"><%= post.title %></a>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= post.category.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= post.user.username %>
                </td>

                <td
                  class="
                    px-6
                    py-4
                    whitespace-nowrap
                    text-right text-sm
                    font-medium
                  "
                >
                  <a
                    href="/admin/post/<%= post.id %>/editar"
                    class="text-indigo-600 hover:text-indigo-900"
                  >
                    Editar
                  </a>
                </td>
                <td
                  class="
                    px-6
                    py-4
                    whitespace-nowrap
                    text-right text-sm
                    font-medium
                  "
                >
                  <a
                    href="/admin/post/<%= post.id %>/deletar"
                    class="text-indigo-600 hover:text-indigo-900"
                  >
                    Excluir
                  </a>
                </td>
              </tr>
              <% })%>

              <!-- END -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
